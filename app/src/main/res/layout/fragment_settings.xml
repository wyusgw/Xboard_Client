<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 返回按钮和标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/background_secondary">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_right"
                android:rotation="180"
                android:contentDescription="返回"
                android:tint="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 其余原有设置项分组内容全部放在这个LinearLayout内 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 通用设置卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通用设置"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="18dp" />

                    <!-- 深色模式 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_dark_mode"
                            android:contentDescription="深色模式图标"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="深色模式"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                        <Switch
                            android:id="@+id/darkModeSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="6dp" />

                    <!-- 自动连接 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_power"
                            android:contentDescription="自动连接图标"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="自动连接VPN"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                        <Switch
                            android:id="@+id/autoConnectSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="6dp" />

                    <!-- 通知 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_info"
                            android:contentDescription="通知图标"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="连接通知"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />
                        <Switch
                            android:id="@+id/notificationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 订阅管理卡片（只读+复制） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订阅管理"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_servers"
                            android:contentDescription="订阅图标"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:id="@+id/subscriptionUrlText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="订阅链接"
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary"
                            android:ellipsize="end"
                            android:maxLines="1" />
                        <ImageButton
                            android:id="@+id/copySubscriptionButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_info"
                            android:background="@android:color/transparent"
                            android:contentDescription="复制订阅"
                            android:tint="@color/primary_blue" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="如需更换订阅，请前往官网或App首页扫码登录"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="8dp"
                        android:gravity="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 高级卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高级"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="18dp" />

                    <Button
                        android:id="@+id/resetSettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="重置所有设置"
                        android:textColor="@color/error"
                        android:backgroundTint="@color/card_background"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/ios_button_outline"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 关于卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/aboutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于：九霄云 Android 客户端\n版本 1.0.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView> 