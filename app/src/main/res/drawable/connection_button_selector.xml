<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 连接中状态 -->
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/warning_orange" />
            <stroke
                android:width="2dp"
                android:color="@color/warning_orange" />
        </shape>
    </item>
    
    <!-- 已连接状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/success_green" />
            <stroke
                android:width="2dp"
                android:color="@color/success_green" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/primary_blue" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_blue_light" />
        </shape>
    </item>
    
</selector>